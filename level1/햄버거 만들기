def solution(ingredient):
    # 1 2 3 1 이 되어야함
    answer = 0
    i = -1
    while i <= len(ingredient)-4:
        i+=1
        #print("check ",i, ingredient, ingredient[i:i+4])
        if ingredient[i:i+4] == [1, 2, 3, 1] :
            tmp = i
            answer += 1
            #print("============")
            for _ in range(0,4):
                ingredient.pop(i)
            i = tmp-2
        #print(i, ingredient, ingredient[i:i+4])
    return answer
