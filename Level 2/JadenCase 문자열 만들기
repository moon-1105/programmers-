def solution(s):
    answer = ''
    answer_arr = []
    words = s.split()
    for word in words:
        new_word = ""
        for i in range(0, len(word)):
            if i==0:
                new_word = word[i].upper()
            elif i!=0 :  
                new_word += word[i].lower()
        answer_arr.append(new_word)
    #print(answer_arr)
    for ele in answer_arr:
        answer += ele+" "
    answer=answer[:-1]
    return answer
